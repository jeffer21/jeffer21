<h1>Your Task</h1>

<h2><%= @task.name %></h2>

<%= link_to "Edit a new Task", edit_task_path %>
<%= link_to "Delete", task_path,
      method: :delete,
      data: { confirm: "Are you sure?" } %>

<%=form_for(@sub_task) do |f| %>
  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.submit %>
<% end %>



